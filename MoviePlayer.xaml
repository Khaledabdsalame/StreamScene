            <Button  HorizontalAlignment="Left" Margin="988,11,0,0" VerticalAlignment="Top" Width="24" Height="22" BorderBrush="{x:Null}" RenderTransformOrigin="0.5,0.5" Click="Button_Click_3" x:Name="Btn1" Visibility="Hidden">
